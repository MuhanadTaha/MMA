@using MMA.Utility;
@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
}

<section id="popular-courses" class="courses mt-5 pt-5">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="row">
            <div class="section-title col-6">
                <h2>Courses</h2>
                <p>Popular Courses</p>
            </div>
            @if (User.IsInRole(SD.ManagerUser))
            {
                <div class="text-end col-6">
                    <a class="btn btn-danger" asp-action="Create" asp-controller="Courses" asp-area="Admin">Add Course <span><i class="fa-solid fa-school"></i></span></a>
                </div>
            }
        </div>
        <div class="row aos-init aos-animate" data-aos="zoom-in" data-aos-delay="100">

            @foreach (var item in Model)
            {

                <div class="col-lg-4 col-md-6 d-flex align-items-stretch pt-2">
                    <div class="course-item">

                        <img src="@Html.DisplayFor(m=>item.Image)" class="img-fluid" alt="...">
                        <div class="course-content">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4>@Html.DisplayFor(m=>item.CourseName)</h4>
                                <p class="price">@Html.DisplayFor(m=>item.Price)</p>
                            </div>

                            <h3><a asp-area="Customer" asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(m=>item.Topic)</a></h3>

                            <p>
                                @if (item.Description != null)
                                {
                                    @Html.Raw(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                                }
                            </p>


                            <div class="trainer d-flex justify-content-between align-items-center">
                                <div class="trainer-profile d-flex align-items-center">
                                    <img src="/assets/img/trainers/trainer-1.jpg" class="img-fluid" alt="">
                                    <span>Antonio</span>
                                </div>
                                <div class="trainer-rank d-flex align-items-center">
                                    <i class="bx bx-user"></i>&nbsp;50
                                    &nbsp;&nbsp;
                                    <i class="bx bx-heart"></i>&nbsp;65
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- End Course Item-->
            }
        </div>




    </div>
</section>

