@page
@using MMA.Utility;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<br />
<h2 class="text-info">Create a New Account</h2>
<br />
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">

    <div class="row">
        
        <div class="col-md-4 offset-md-4">

            <section>
                <form id="account" method="post">
                    <h2>Register</h2>
                    <hr />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating">
                        <input asp-for="Input.Name" class="form-control" autocomplete="off" required="true" />
                        <label asp-for="Input.Name" class="form-label"></label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>


                    <div class="form-floating mt-2">
                        <input asp-for="Input.Email" class="form-control" autocomplete="off" required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mt-2">
                        <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="off" required="true" />
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-floating mt-2">
                        <input asp-for="Input.StreetAddress" class="form-control" autocomplete="off" required="true" />
                        <label asp-for="Input.StreetAddress" class="form-label"></label>
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>


                    <div class="form-floating mt-2">
                        <input asp-for="Input.City" class="form-control" autocomplete="off" required="true" />
                        <label asp-for="Input.City" class="form-label"></label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>

                    <div class="form-floating mt-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="off" required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>

                        <div class="form-floating mt-2">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="off" required="true" />
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>



                    </div>
                    <div class="mt-2">
                        @if (User.IsInRole(SD.ManagerUser)) // إذا اليوزر الحالي في الرول كان مانيجا رح تظهر هذي الخيارات
                        {
                           
                            <div class="col-12 text-center">
                                <label class="form-check-label">
                                    <input type="radio" value="@SD.ManagerUser" name="rdUserRole" /> @SD.ManagerUser
                                </label>
                                <label class="form-check-label">
                                    <input type="radio" value="@SD.TeacherUser" name="rdUserRole" checked /> @SD.TeacherUser
                                </label>
                            </div>


                        }
                    </div>

                    <div class="mt-2">
                        <button id="register-submit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </div>
                </form>
            </section>


        </div>
    </div>



</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
